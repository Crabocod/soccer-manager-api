# Application
APP_NAME=soccer-manager
APP_ENV=development
LOG_LEVEL=info

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=soccer_manager
DB_SSLMODE=disable

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=168h

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Login
LOGIN_MAX_ATTEMPTS=5
LOGIN_ATTEMPT_TTL=15m
TEAM_CACHE_TTL=30m
